{
  "name": "affiliates",
  "vendor": "vtex",
  "version": "0.29.0",
  "title": "Affiliates",
  "description": "App that adds support for affiliates on IO stores",
  "mustUpdateAt": "2018-01-04",
  "categories": [],
  "dependencies": {
    "vtex.affiliates-order-form-spy": "0.x",
    "vtex.affiliates-commission-service": "0.x",
    "vtex.store": "2.x",
    "vtex.rich-text": "0.x",
    "vtex.flex-layout": "0.x",
    "vtex.product-summary": "2.x",
    "vtex.store-components": "3.x",
    "vtex.order-manager": "0.x",
    "vtex.search-result": "3.x",
    "vtex.breadcrumb": "1.x",
    "vtex.responsive-layout": "0.x",
    "vtex.store-icons": "0.x",
    "vtex.styleguide": "9.x"
  },
  "builders": {
    "node": "6.x",
    "docs": "0.x",
    "react": "3.x",
    "masterdata": "1.x",
    "graphql": "1.x",
    "store": "0.x",
    "messages": "1.x",
    "admin": "0.x"
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.vtex.com",
        "path": "/api/dataentities/*"
      }
    },
    {
      "name": "AcessaTodosPedidos"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "/api/checkout/pvt/*"
      }
    },
    {
      "name": "SaveOrderFormConfiguration"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "/api/checkout/pvt/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "httpstat.us",
        "path": "*"
      }
    },
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    }
  ],
  "settingsSchema": {
    "title": "Affiliates",
    "type": "object",
    "properties": {
      "leadDurationInDays": {
        "title": "Lead duration in days",
        "type": "integer",
        "default": 60
      },
      "defaultSkuCommissionValue": {
        "title": "Default value to be used for sku commission",
        "type": "integer",
        "default": 0
      }
    }
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
