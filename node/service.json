{
  "memory": 256,
  "ttl": 10,
  "timeout": 2,
  "minReplicas": 2,
  "maxReplicas": 4,
  "workers": 1,
  "routes": {
    "status": {
      "path": "/_v/status/:code",
      "public": true
    },
    "affiliate": {
      "path": "/_v/affiliate",
      "public": true
    }
  },
  "events": {
    "onAppInstalled": {
      "sender": "apps",
      "keys": ["setup"]
    },
    "setAffiliateLead": {
      "sender": "vtex.orders-broadcast",
      "topics": ["payment-approved"]
    },
    "verifyUserAffiliateLead": {
      "sender": "vtex.order-form-courier",
      "topics": ["order-form-email-updated"]
    }
  }
}
